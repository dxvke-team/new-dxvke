/*弹出层*/
  .model_bd {
    width: 100%;
    height: 100%;
    opacity: .5;
    background-color: black;
    position: fixed;
    top: 0;
    z-index: 9999;
  }

  .model_main {
    z-index: 99999;
    position: fixed;
    top: 0;
    left: 0;
    width: 598rpx;
    height: 364rpx;
    margin: 250rpx calc((100% - 598rpx) / 2);
    background-color: white;
    border-radius: 15rpx;
  }

  .model_main_des {
    position: absolute;
    text-align: center;
    width: 100%;
  }

  .model_main_des > .des {
    font-size: 20rpx;
    color: #666666;
    margin: 0 16rpx;
    line-height: 84rpx;
    height: 84rpx;
  }

  .m_btn {
    display: inline-block;
    font-size: 26rpx;
    color: white;
    width: 186rpx;
    line-height: 68rpx;
    border-radius: 80rpx;
    border: none;
    background: #ff5300;
    margin: 28rpx 0 0;
  }

 .model_main image {
     width: 76rpx;
    height: 76rpx;
    position: absolute;
    bottom: -130rpx;
    left: calc((100% - 76rpx)/2);
  }

  .model_title {
    color: white;
    font-size: 32rpx;
    text-align: center;
    line-height: 88rpx;
    border-radius: 15rpx 15rpx 0 0;
    background: -webkit-linear-gradient(left, #ff8d00, #ff5300); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(left, #ff8d00, #ff5300); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(left, #ff8d00, #ff5300); /* Firefox 3.6 - 15 */
    background: linear-gradient(left, #ff8d00, #ff5300); /* 标准的语法 */
  }

  .word {
    width: 408rpx;
    -webkit-appearance: none;
    -webkit-tap-highlight-color: rgba(255, 0, 0, 0);
    text-align: center;
    background-color: #ededed;
    font-size: 28rpx;
    color: #333;
    margin: 27rpx auto 0;
    border-radius: 10rpx;
    height: 70rpx;
  }
  .cancel {
    width: 50rpx;
    height: 50rpx;
    position: fixed;
    right: calc(((100% - 320rpx) / 2) - 50rpx);
    top: calc(((100% - 320rpx) / 2) - 300rpx);
    z-index: 999999;
  }
  .btn{
    height: 98rpx;
    border-radius: 0;
    font-size: 20rpx;
    color: #444;
    padding-top: 48rpx;
    box-sizing: border-box;
    background: white;

  } 
