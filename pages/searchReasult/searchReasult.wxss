/* pages/searchResault/searchReasult.wxss */
.search{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-wrap: nowrap;
  background: white;
}
.search-main{
  height: 64rpx;
  line-height: 64rpx;
  flex-grow: 2;
  display: flex;
  align-items: center;
  background-color: #f7f7f7;
  padding: 10rpx 16rpx;
  border-radius: 50rpx;
  margin: 10rpx 30rpx;
  box-sizing: border-box;
}
.search image{
  width:28rpx;
  height: 28rpx;
}
.search input{
  flex-grow: 2;
  vertical-align: middle;
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #333;
}
.tab-h{
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: white;
  font-size: 28rpx;
  white-space: nowrap;
  border-top: 1rpx solid #e5e5e5;
}
.tab-item{
  display: inline-block;
  color: #333;
  width: calc(100%/4);
  text-align: center;
  position: relative;

}
.tab-item.active{
   color: #9a7bff;
}
.share-income{
   font-size: 20rpx;
   color: white;
   display: inline-block;
   padding: 0 16rpx;
   border-radius: 16rpx;
   height: 32rpx;
   line-height: 32rpx;
   background: -webkit-linear-gradient(left, #f51d46, #fe6d13);
		/* Safari 5.1 - 6.0 */
		background: -o-linear-gradient(left, #8721b5, #db3283);
		/* Opera 11.1 - 12.0 */
		background: -moz-linear-gradient(left, #8721b5, #db3283);
		/* Firefox 3.6 - 15 */
		background: linear-gradient(left, #8721b5, #db3283);
		/* 标准的语法 */
}
.scoll-h{
  overflow: scroll;
  height: 100%;
}
