/* pages/invite/invite.wxss */
.invite{
  width: 100%;
  height: 100%;
  padding: 0 50rpx;
  background: white;
  box-sizing: border-box;
}
.title{
  font-size: 46rpx;
  color: #333;
  height: 106rpx;
  line-height: 106rpx;
  font-weight: bold;
}
.text{
  font-size: 24rpx;
  color: #999;
  line-height: 42rpx;
}
.img{
   width: 510rpx;
   height: 804rpx; 
   margin: 0 auto;
}
.btn{
  width: 296rpx;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 50rpx;
  text-align: center;
  font-size: 32rpx;
  border: 1rpx solid #9a7bff;
  box-sizing: border-box;
}
button[plain] {
  border: 1rpx solid #9a7bff;
  color: #9a7bff;
}

.btn2{
  background: #9a7bff;
  color: white;
}