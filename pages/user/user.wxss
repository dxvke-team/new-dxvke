.header {
  height: 270rpx;
  margin: 14rpx 30rpx 20rpx;
  border-radius: 8rpx;
  background: -webkit-linear-gradient(left, #8721b5, #db3283);
  /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left, #8721b5, #db3283);
  /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(left, #8721b5, #db3283);
  /* Firefox 3.6 - 15 */
  background: linear-gradient(left, #8721b5, #db3283);
  /* 标准的语法 */
  display: flex;
  align-items: center;
  box-shadow: 0 6rpx 13rpx #e4bfe4;
}

.head_image {
  /* margin:10px auto; */
  border-radius: 50%;
  width: 140rpx;
  height: 140rpx;
  border: 2rpx solid #b746dc;
}

.level-icon {
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  right: -20rpx;
  bottom: 8rpx;
}

.nickname {
  color: white;
  font-size: 36rpx;
  line-height: 80rpx;
  height: 80rpx;
}

.level {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 60rpx;
  height: 60rpx;
}

.income {
  width: 100%;
  height: 180rpx;
  background: white;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
}

.income-item {
  width: 50%;
  height: 114rpx;
  padding: 0 22rpx 0 42rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.income-item:nth-child(1) {
  border-right: 1rpx solid #e5e5e5;
}

.icon {
  width: 24rpx;
  height: 24rpx;
}

.main {
  background: white;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
}

.main-item {
  border-bottom: 1rpx solid #e5e5e5;
  height: 104rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 22rpx;
}

.main-item:nth-last-child(1) {
  border: none;
}

.main-item>view {
  display: flex;
  align-items: center;
}

.item-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 17rpx;
}

/*弹出层*/

.model_bd {
  width: 100%;
  height: 100%;
  opacity: 0.5;
  background-color: black;
  position: fixed;
  top: 0;
  z-index: 9999;
}

.model_main {
  width: 598rpx;
  height: 490rpx;
  z-index: 99999;
  position: fixed;
  top: 0;
  left: 0;
  margin: 250rpx calc((100% - 598rpx) / 2);
  border-radius: 15rpx;
  box-sizing: border-box;
}

.model_main_des {
  position: absolute;
  text-align: center;
  width: 100%;
}

.qr {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
}

.cancel {
  width: 76rpx;
  height: 76rpx;
  position: absolute;
  bottom: -100rpx;
  left: calc((100% - 76rpx)/2);
}

.words {
  font-size: 28rpx;
  color: white;
  height: 80rpx;
  margin-top: 30rpx;
}

