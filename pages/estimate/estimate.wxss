/* pages/estimate/estimate.wxss */

.tab-h {
  height: 88rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 88rpx;
  background: white;
  font-size: 28rpx;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  border-top: 1rpx solid #e5e5e5;
  margin-bottom: 16rpx;
}

.tab-item {
   display: inline-block; 
  color: #666;
  width: 50%;
  text-align: center

}

.tab-item.active {
  color: #9a7bff;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 6rpx;
  width: 120rpx;
  background: #9a7bff;
  position: absolute;
  bottom: 0;
  left: calc((100% - 120rpx)/2);
}

.tab-content {
  padding-top: 104rpx;
  box-sizing: border-box;
}

.scoll-h {
  height: 100%;
}
.list{
  background: white;
  margin-bottom: 10rpx;
}
.list-time{
  font-size: 24rpx;
  color: #333;
  height: 68rpx;
  line-height: 68rpx;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 0 30rpx;
}
.list-goods{
  padding: 24rpx 30rpx 0;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  
}
.list-goods .pic{
  width: 110rpx;
  height: 110rpx;
  border-radius: 8rpx;
}
.list-goods .des{
  width: calc(100% - 110rpx);
  padding-left: 16rpx;
  box-sizing: border-box;
 
}
.des-title{
  width: 346rpx;
  color: #333;
  font-size: 24rpx;
  height: 42rpx;
  overflow: hidden;
}