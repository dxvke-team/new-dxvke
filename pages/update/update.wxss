}


/*弹出层*/
  .model_bd {
    width: 100%;
    height: 100%;
    opacity: .5;
    background-color: black;
    position: fixed;
    top: 0;
    z-index: 9999;
  }

  .model_main {
    width: 598rpx;
    height: 490rpx;
    z-index: 99999;
    position: fixed;
    top: 0;
    left: 0;
    margin: 250rpx calc((100% - 598rpx) / 2);
    border-radius: 15rpx;
    box-sizing: border-box;
  }

  .model_main_des {
    position: absolute;
    text-align: center;
    width: 100%;
  }
  .qr{
    width: 400rpx;
    height: 400rpx;
    border-radius: 20rpx;
  }
  .cancel {
    width: 76rpx;
    height: 76rpx;
    position: absolute;
    bottom: -100rpx;
    left: calc((100% - 76rpx)/2);
  }
  .words{
    font-size: 28rpx;
    color: white;
    height: 80rpx;
    margin-top: 30rpx;
  }
