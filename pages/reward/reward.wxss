  color: rgba(255,255,255,.8);
  position: absolute;
  right: 44rpx;
  top: 24rpx;
}
.bd{
  width: 100%;
  height: 100%;
}
.header-main{
  width: calc(100% - 88rpx);
  height: 406rpx;
  /* margin: 104rpx auto 0; */
  background: white;
  position: absolute;
  top: 106rpx;
  margin: 0 44rpx;
  border: 4rpx solid #fe600c;
