}
.header{
  width: 100%;
  height: 514rpx;
  position: relative;
  font-size: 0;
}
.rule{
  background: rgba(0, 0, 0, .3);
  font-size:26rpx;
  height: 56rpx;
  line-height: 56rpx;
  width: 160rpx;
  border-radius: 28rpx;
