  top: -65rpx;
  left: calc((100% - 130rpx)/2);
}
.nickname{
  font-size: 24rpx;
  color: #999;
   line-height:  40rpx;
  
}
.tip{
  font-size: 32rpx;
  color: #333;
   line-height:  54rpx;
}
.pro-main{
  padding: 0rpx 38rpx;
  margin-top: 16rpx;
  height: 190rpx;
}
.pro-pic{
  width: 190rpx;
  height: 190rpx;
}
.pro-des{
  width: calc(100% - 190rpx);
  padding-left: 18rpx;
  box-sizing: border-box;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.pro-title{
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
   display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}
.pro-price{
  font-size: 34rpx;
  color: #f51d46;
  line-height: 56rpx;
}
.time{
  width: 290rpx;
  height: 38rpx;
  line-height: 38rpx;
  background: #ff5900;
  text-align: center;
  color: white;
  font-size: 24rpx;
  border-radius: 19rpx;
}
.progress{
  height: 11px;
  background: #a41717;
  border-radius: 10px;
  margin-top: 30rpx;
  overflow: hidden;
  box-shadow:2rpx 2rpx 2rpx #ee6457;
  padding: 0 1px;  
}
progress{
   border-radius: 10rpx;
   overflow: hidden;
   margin-top: 1px;
}
.btn{
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
}
.btn:nth-child(1){
  margin-bottom: 20rpx;
}
.member{
  background: rgba(255,255,255,.16);
  padding: 0 20rpx 20rpx;
  border-radius: 10rpx;
}
.member-title{
  height:80rpx;border-bottom: 1rpx solid #e86053;
  display: flex;
  align-items: center;
  justify-content: center;
}
.member-list{
   height: 90rpx;
}
.index{
  font-size: 34rpx;
  color: #ffda00;
  margin-right: 20rpx;
}
.member-pic{
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid white;
  border-radius: 50%;
  box-sizing: border-box;
  margin-right: 20rpx;
}
.member-name{
  font-size: 24rpx;
  color: white;
}
.cash{
  width: 28rpx;
  height: 28rpx;
  margin-right: 2rpx;
}



.name {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  height: 80rpx;
   display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}
.share-income{
   font-size: 20rpx;
   color: white;
   display: inline-block;
   padding: 0 16rpx;
   border-radius: 16rpx;
   height: 32rpx;
   line-height: 32rpx;
   background: -webkit-linear-gradient(left, #f51d46, #fe6d13);
		/* Safari 5.1 - 6.0 */
		background: -o-linear-gradient(left, #8721b5, #db3283);
		/* Opera 11.1 - 12.0 */
		background: -moz-linear-gradient(left, #8721b5, #db3283);
		/* Firefox 3.6 - 15 */
		background: linear-gradient(left, #8721b5, #db3283);
		/* 标准的语法 */
}
.goods-list{
  background: white;
  width: calc((100% - 10rpx)/2);
  margin-top: 10rpx;
  font-size: 0;
}





